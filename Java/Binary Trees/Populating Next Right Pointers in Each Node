class Solution {
    public Node connect(Node root) {
        if (root == null) {
            return root;
        }

        Queue<Node> queue = new LinkedList<>();
        queue.offer(root);

        while (!queue.isEmpty()) {
            int levelLen = queue.size();
            Node prev = null;

            for (int i = 0; i < levelLen; i ++) {
                Node temp = queue.poll();

                if (prev != null) {
                    prev.next = temp;
                }
                prev = temp;

                if (temp.left != null) {
                    queue.offer(temp.left);
                }
                    
                if (temp.right != null) {
                    queue.offer(temp.right);
                }
            }
        }
        return root;
    }
}
