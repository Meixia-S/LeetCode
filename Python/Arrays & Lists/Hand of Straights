class Solution:
    def isNStraightHand(self, hand: List[int], groupSize: int) -> bool:
        if len(hand) % groupSize != 0:
            return False

        hand.sort()

        while hand:
            first = hand[0]
            for i in range(groupSize):
                if first + i in hand:
                    hand.remove(first + i)
                else:
                    return False

        return True
