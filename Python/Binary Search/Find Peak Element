class Solution:
    def findPeakElement(self, nums: List[int]) -> int:
        if len(nums) == 1 or (len(nums) == 2 and nums[0] > nums[1]):
            return 0
        elif len(nums) == 2:
            return 1        

        left = 1
        right = len(nums) - 2

        while left <= right:
            mid = left + (right - left) // 2
            
            if nums[mid] > nums[mid - 1] and nums[mid] > nums[mid + 1]:
                return mid
            elif nums[mid] < nums[mid - 1]:
                right = mid - 1
            elif nums[mid] < nums[mid + 1]:
                left = mid + 1
       
        if right == 0:
            return 0
        return left  
